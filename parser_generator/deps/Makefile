.PHONY: install uninstall clean mrproper

install:
	$(MAKE) --directory ocaml-unicode  install
	$(MAKE) --directory ocaml-code-map install
	$(MAKE) --directory ocaml-clap     install

uninstall:
	$(MAKE) --directory ocaml-unicode  uninstall
	$(MAKE) --directory ocaml-code-map uninstall
	$(MAKE) --directory ocaml-clap     uninstall

clean:
	$(MAKE) --directory ocaml-unicode  clean
	$(MAKE) --directory ocaml-code-map clean
	$(MAKE) --directory ocaml-clap     clean

mrproper:
	$(MAKE) --directory ocaml-unicode  mrproper
	$(MAKE) --directory ocaml-code-map mrproper
	$(MAKE) --directory ocaml-clap     mrproper
